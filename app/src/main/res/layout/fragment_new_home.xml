<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".NewHomeFragment">

        <ImageView
            android:id="@+id/header_bg"
            android:layout_width="match_parent"
            android:layout_height="385dp"
            android:src="@drawable/top_table"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/titleLabel"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Leaderboard"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="32sp"/>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:id="@+id/toplayout"
            android:layout_below="@id/titleLabel"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <RelativeLayout
                android:layout_marginEnd="10dp"
                android:layout_marginTop="60dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/imgTop2"
                    android:layout_centerHorizontal="true"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_launcher_foreground"
                    app:civ_shadow="true" />

                <ImageView
                    android:id="@+id/iv_top2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:adjustViewBounds="true"
                    android:src="@drawable/top2" />

                <TextView
                    android:id="@+id/nameTop2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:text="Name 2"
                    android:textColor="@color/white"
                    android:layout_below="@id/iv_top2"
                    android:layout_centerHorizontal="true"
                    android:textStyle="bold"
                    android:textAlignment="center"/>

                <LinearLayout
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/nameTop2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/coin"
                        android:adjustViewBounds="true"/>

                    <TextView
                        android:layout_marginStart="2dp"
                        android:id="@+id/coinTop2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textAlignment="center"/>

                </LinearLayout>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/top1Layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/imgTop1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_launcher_foreground"
                    app:civ_shadow="true" />

                <ImageView
                    android:id="@+id/iv_top1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:adjustViewBounds="true"
                    android:src="@drawable/top1" />

                <TextView
                    android:id="@+id/nameTop1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="Name 1"
                    android:textColor="@color/white"
                    android:layout_below="@id/iv_top1"
                    android:layout_centerHorizontal="true"
                    android:textStyle="bold"
                    android:textAlignment="center"/>

                <LinearLayout
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/nameTop1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/coin"
                        android:adjustViewBounds="true"/>

                    <TextView
                        android:layout_marginStart="2dp"
                        android:id="@+id/coinTop1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textAlignment="center"/>

                </LinearLayout>


            </RelativeLayout>

            <RelativeLayout
                android:layout_marginStart="10dp"
                android:layout_marginTop="70dp"
                android:id="@+id/top2Layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/imgTop3"
                    android:layout_centerHorizontal="true"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_launcher_foreground"
                    app:civ_shadow="true" />

                <ImageView
                    android:id="@+id/iv_top3"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:adjustViewBounds="true"
                    android:src="@drawable/top3" />

                <TextView
                    android:id="@+id/nameTop3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="Name 1"
                    android:textColor="@color/white"
                    android:layout_below="@id/iv_top3"
                    android:layout_centerHorizontal="true"
                    android:textStyle="bold"
                    android:textAlignment="center"/>

                <LinearLayout
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/nameTop3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/coin"
                        android:adjustViewBounds="true"/>

                    <TextView
                        android:layout_marginStart="2dp"
                        android:id="@+id/coinTop3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textAlignment="center"/>

                </LinearLayout>


            </RelativeLayout>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="5dp"
            android:layout_below="@id/header_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/userRV" />

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>


    </RelativeLayout>
</layout>